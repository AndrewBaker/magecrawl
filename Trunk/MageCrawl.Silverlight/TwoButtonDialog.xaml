<magecrawl:ChildWindowNoFade x:Class="MageCrawl.Silverlight.TwoButtonDialog"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:magecrawl="clr-namespace:MageCrawl.Silverlight"
           Width="375" Height="125" 
           Title="TwoButtonDialog" HasCloseButton="False">
    <Grid x:Name="LayoutRoot" Margin="2" KeyDown="OnKeyDown">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="Text"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="OKButton" Content="OK" Click="OKButton_OnClick" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,20,0" />
                <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_OnClick" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,20,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</magecrawl:ChildWindowNoFade>