<magecrawl:ChildWindowNoFade x:Class="MageCrawl.Silverlight.OneButtonDialog"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:magecrawl="clr-namespace:MageCrawl.Silverlight"
           Width="375" Height="auto" 
           Title="OneButtonDialog" HasCloseButton="False">
    <Grid x:Name="LayoutRoot" Margin="0" KeyDown="OnKeyDown">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="Text" TextWrapping="Wrap" TextAlignment="Center"/>
            <Button x:Name="OKButton" Content="OK" Click="OKButton_OnClick" Width="75" Height="23" HorizontalAlignment="Center" Margin="0,12,20,0"/>
        </StackPanel>
    </Grid>
</magecrawl:ChildWindowNoFade>